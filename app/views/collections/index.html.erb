<%= provide(:title, 'Portfolio') %>
<h1>Portfolio</h1>

<%= link_to "Create new collection", new_collection_path %>

<ul class="collections">
  <% @collections.each do |collection| %>
    <li>
      <h3><%= link_to collection.title, collection %>
      <%= collection.date.to_s %></h3><br>
      <%= link_to image_tag(collection.link, size: '150x150'), collection %>
      <%= pluralize(collection.works.count, "work") %>
      <%= link_to "delete", collection, method: :delete, data: { confirm: "You sure?" } %>
  	</li>
  <% end %>
</ul>